<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="巴枪设置">

        <com.kaicom.bargunsettingdemo.BarGunSettings.SoundSettingPreference
            android:key="sound"
            android:title="声音"
            android:icon="@mipmap/shengyin"
            android:summary="调节巴枪声音"
           />

        <com.kaicom.bargunsettingdemo.BarGunSettings.BackLightSettingPreference
            android:key="backlight"
            android:title="背光"
            android:icon="@mipmap/beiguang"
            android:summary="调节巴枪背光"
            />

        <com.kaicom.bargunsettingdemo.BarGunSettings.AutoLockSettingPreference
            android:title="自动锁屏设置"
            android:key="autolock"
            android:icon="@mipmap/suoping"
            android:summary="设置自动锁屏时间"
            />


        <com.kaicom.bargunsettingdemo.BarGunSettings.AutoUploadPreference
            android:title="自动上传时间"
            android:key="autoupload"
            android:icon="@mipmap/update"
            android:summary="设置自动上传时间"
            />

        <Preference
            android:icon="@mipmap/address"
            android:title="接口地址"
            android:summary="设置接口地址"  >

        </Preference>

        <com.kaicom.bargunsettingdemo.BarGunSettings.NetworkSettingPreference
            android:key="network"
            android:title="无线网络"
            android:summary="打开/关闭Wifi"
            android:icon="@mipmap/wifi"
            />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="巴枪信息">

        <com.kaicom.bargunsettingdemo.BarGunSettings.StorageSettingPreference
            android:icon="@mipmap/sycc"
            android:title="剩余存储"
            android:summary="检查剩余存储空间"
            />

        <com.kaicom.bargunsettingdemo.BarGunSettings.VersionSettingPreference
            android:icon="@mipmap/ruanjianxinxi"
            android:title="版本信息"
            android:summary="检查当前软件版本"
            />

        <android.support.v7.preference.PreferenceScreen
            android:icon="@mipmap/jiqi"
            android:title="机器信息"
            android:summary="检查巴枪信息">
            <intent
                android:action="android.settings.DEVICE_INFO_SETTINGS"
                />
        </android.support.v7.preference.PreferenceScreen>
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
        android:title="巴枪升级">

        <android.support.v7.preference.PreferenceScreen
            android:key="upgrade"
            android:icon="@mipmap/shengji"
            android:title="检查更新"
            android:summary="升级软件版本"
            />

    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>